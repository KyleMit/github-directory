<div class="results">
    <div class="results-summary">
        <strong>{{results.total_count.toLocaleString()}}</strong> results
    </div>
    <ul class="results-body">

        {% for user in results.users %}
        <li>
            <a href="{{user.url}}" class="user">

                <img src="{{user.avatarUrl}}" alt="Profile for {{user.login}}" class="profile"
                    loading="lazy" width="60" height="60" />

                <span class="login">{{user.login}}</span>

                <span class="bio">
                    {{ user.bio }}
                </span>

                <span class="following icon-data">
                    <svg ><use href="#icon-users"></use></svg>
                    <strong>&nbsp;{{user.followingCount.toLocaleString()}}&nbsp;</strong>
                    <span>following</span>
                </span>

                <span class="followers icon-data">
                    <svg ><use href="#icon-users-crown"></use></svg>
                    <strong>&nbsp;{{user.followerCount.toLocaleString()}}&nbsp;</strong>
                    <span>followers</span>
                </span>

                <span class="stars icon-data">
                    <svg ><use href="#icon-file-code"></use></svg>
                    <strong>&nbsp;{{user.gistCount.toLocaleString()}}&nbsp;</strong>
                    <span>gists</span>
                </span>


                <span class="repos icon-data">
                    <svg ><use href="#icon-code-branch"></use></svg>
                    <strong>&nbsp;{{user.repoCount.toLocaleString()}}&nbsp;</strong>
                    <span>repos</span>
                </span>

            </a>
        </li>
        {% endfor %}
    </ul>

    {% if results.pagination.showPagination %}
        <div class="results-pagination">
            {% if results.pagination.prevPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.prevPage}}">
                    <svg ><use href="#icon-angle-left"></use></svg>
                </a>
            {% else %}
                <span class="disabled">
                    <svg ><use href="#icon-angle-left"></use></svg>
                </span>
            {% endif %}

            {% if results.pagination.firstPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.firstPage}}">
                    {{results.pagination.firstPage}}
                </a>
            {% endif %}

            {% if results.pagination.skipToFirst %}
                <span class="skip">
                    &hellip;
                </span>
            {% endif %}

            {% if results.pagination.prevPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.prevPage}}">
                    {{results.pagination.prevPage.toLocaleString()}}
                </a>
            {% endif %}

            <span class="active">
                {{results.pagination.curPage.toLocaleString()}}
            </span>

            {% if results.pagination.nextPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.nextPage}}">
                    {{results.pagination.nextPage.toLocaleString()}}
                </a>
            {% endif %}

            {% if results.pagination.skipToLast %}
                <span class="skip">
                    &hellip;
                </span>
            {% endif %}

            {% if results.pagination.lastPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.lastPage}}">
                    {{results.pagination.lastPage.toLocaleString()}}
                </a>
            {% endif %}

            {% if results.pagination.nextPage %}
                <a href="/search?q={{results.searchTerm}}&p={{results.pagination.nextPage}}">
                    <svg ><use href="#icon-angle-right"></use></svg>
                </a>
            {% else %}
                <span class="disabled">
                    <svg ><use href="#icon-angle-right"></use></svg>
                </span>
            {% endif %}
        </div>
    {% endif %}

</div>
