<div class="results">
    <div class="results-summary">
        <strong>{{results.total_count.toLocaleString()}}</strong> results
    </div>
    <ul class="results-body">

        {% for user in results.users %}
        <li>
            <a href="{{user.url}}" class="user">

                <img src="{{user.avatarUrl}}" alt="Profile for {{user.login}}" class="profile" />

                <span class="login">{{user.login}}</span>

                <span class="bio">
                    {{ user.bio }}
                </span>

                <span class="following icon-data">
                    <svg ><use href="#icon-users"></use></svg>
                    <strong>&nbsp;{{user.followingCount.toLocaleString()}}&nbsp;</strong>
                    <span>following</span>
                </span>

                <span class="followers icon-data">
                    <svg ><use href="#icon-users-crown"></use></svg>
                    <strong>&nbsp;{{user.followerCount.toLocaleString()}}&nbsp;</strong>
                    <span>followers</span>
                </span>

                <span class="stars icon-data">
                    <svg ><use href="#icon-file-code"></use></svg>
                    <strong>&nbsp;{{user.gistCount.toLocaleString()}}&nbsp;</strong>
                    <span>gists</span>
                </span>


                <span class="repos icon-data">
                    <svg ><use href="#icon-code-branch"></use></svg>
                    <strong>&nbsp;{{user.repoCount.toLocaleString()}}&nbsp;</strong>
                    <span>repos</span>
                </span>

            </a>
        </li>
        {% endfor %}
    </ul>
    {% if results.incomplete_results %}
        <div class="results-pagination">
                Pagination
        </div>
    {% endif %}
</div>
